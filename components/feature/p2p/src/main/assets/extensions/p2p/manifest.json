{
  "manifest_version": 2,
  "name": "Mozilla Android Components - P2P",
  "version": "1.0",
  "background": {
    "scripts": ["lib/browser-polyfill.js", "main/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [ "main/content_script.js" , "p2p.js" ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "geckoViewAddons",
    "nativeMessaging"
  ]
}
